<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.plk" name="PLK" version="2.02" provider-name="OOLP">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">PLK</summary>
    <description lang="en">OOLP</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.oolp.plk" name="PLK Updater" version="0.0.1" provider-name="oolp">
	<extension point="xbmc.addon.repository" name="PLK Updater">
		<info compressed="false">http://raw.github.com/oolp/oolpplk/master/addons.xml</info>
		<checksum>http://raw.github.com/oolp/oolpplk/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/oolp/oolpplk/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary></summary>
		<description></description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
